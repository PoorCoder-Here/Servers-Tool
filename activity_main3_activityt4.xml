<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activityt4">

    <LinearLayout
        android:id="@+id/linlay4"
        android:layout_width="358dp"
        android:layout_height="390dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="358dp"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/display4"
                android:layout_width="277dp"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/itno4"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="I_No"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/itna4"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="I_Name"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/itqu4"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Quantity"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/itpr4"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Price"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>
            </TableRow>

            <TableRow
                android:id="@+id/input4"
                android:layout_width="100dp"
                android:layout_height="47dp">

                <TextView
                    android:id="@+id/itnoip4"
                    android:layout_width="26dp"
                    android:layout_height="351dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/itnaip4"
                    android:layout_width="wrap_content"
                    android:layout_height="351dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/itquip4"
                    android:layout_width="wrap_content"
                    android:layout_height="351dp"
                    android:textAlignment="center"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/itprip4"
                    android:layout_width="wrap_content"
                    android:layout_height="351dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TextView
        android:layout_width="244dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Hotel IVY       Table - 4"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/viewt4"></TextView>

    <TableRow
        android:id="@+id/totals4"
        android:layout_width="358dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/buttons4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linlay4"
        app:layout_constraintVertical_bias="0.434">

        <TextView
            android:id="@+id/tot4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Total :"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp"></TextView>
    </TableRow>

    <TableRow
        android:id="@+id/buttons4"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linlay4"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/butntkord4"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Take_Order"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"></Button>

        <Button
            android:id="@+id/edit4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="6dp"
            android:text="Edit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"></Button>

        <Button
            android:id="@+id/prnt4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Print"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"></Button>
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>