<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Table4">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="358dp"
        android:layout_height="390dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="358dp"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/attributes"
                android:layout_width="277dp"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/t2ino"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="I_No"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/t2ina"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="I_Name"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/t2qua"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Quantity"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/t2pri"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Price"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>
            </TableRow>

            <TableRow
                android:id="@+id/display"
                android:layout_width="100dp"
                android:layout_height="47dp">

                <TextView
                    android:id="@+id/i_no"
                    android:layout_width="26dp"
                    android:layout_height="351dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/i_na"
                    android:layout_width="wrap_content"
                    android:layout_height="351dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/i_qu"
                    android:layout_width="wrap_content"
                    android:layout_height="351dp"
                    android:textAlignment="center"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/i_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="351dp"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"></TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="244dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Hotel IVY       Table - 4"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableRow
        android:id="@+id/total4"
        android:layout_width="358dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttons44"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/tott4"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Total :"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp"></TextView>
    </TableRow>

    <TableRow
        android:id="@+id/buttons44"
        android:layout_width="358dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.877">

        <Button
            android:id="@+id/buttn4"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Take_Order"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"></Button>

        <Button
            android:id="@+id/edt4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="6dp"
            android:text="Edit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"></Button>

        <Button
            android:id="@+id/pnt4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Print"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"></Button>
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>